<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.recyclage.jfxrecyclage.controllers.AuthController"
      spacing="20" alignment="CENTER" 
      style="-fx-background-color: #f5f5f5; -fx-padding: 40;">

    <Text text="EcoRecyclage" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    
    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-border-radius: 5; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 5, 0, 0);">
        <Label text="Connexion" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        
        <GridPane hgap="10" vgap="10">
            <Label text="Email:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="emailField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            
            <Label text="Mot de passe:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        </GridPane>
        
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Se connecter" onAction="#handleLogin" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
            <Button text="S'inscrire" onAction="#handleRegisterNavigation" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
        </HBox>
    </VBox>
</VBox>