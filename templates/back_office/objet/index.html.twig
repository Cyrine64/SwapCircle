{% extends 'back-base.html.twig' %}

{% block title %}Gestion des Objets{% endblock %}

{% block body %}
<div class="app-content pt-3 p-md-3 p-lg-4">
    <div class="container-xl">
        <div class="row g-3 mb-4 align-items-center justify-content-between">
            <div class="col-auto">
                <h1 class="app-page-title mb-0">Gestion des Objets</h1>
            </div>
            <div class="col-auto d-flex align-items-center gap-2">
                <!-- Search Bar -->
                <form class="search-form" action="{{ path('app_back_office_objet_index') }}" method="GET">
                    <div class="search-wrapper">
                        <input type="text" 
                               name="search" 
                               class="search-input" 
                               placeholder="Rechercher un objet..."
                               value="{{ app.request.query.get('search') }}"
                               autocomplete="off">
                        <button class="search-button" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                        {% if app.request.query.get('search') %}
                            <a href="{{ path('app_back_office_objet_index') }}" class="clear-search" title="Effacer la recherche">
                                <i class="fas fa-times"></i>
                            </a>
                        {% endif %}
                    </div>
                </form>
                <a href="{{ path('app_back_office_objet_new') }}" class="btn app-btn-primary">
                    <i class="fas fa-plus me-2"></i>Ajouter un objet
                </a>
            </div>
        </div>
        
        <div class="row g-4 mb-4">
            <div class="col-12">
                <div class="app-card app-card-orders-table shadow-sm mb-5">
                    <div class="app-card-header p-3">
                        <div class="row justify-content-between align-items-center">
                            <div class="col-auto">
                                <h4 class="app-card-title">Liste des Objets</h4>
                            </div>
                        </div>
                    </div>
                    <div class="app-card-body p-3">
                        <div class="table-responsive">
                            <table class="table app-table-hover mb-0 text-left">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Image</th>
                                        <th>Nom</th>
                                        <th>Catégorie</th>
                                        <th>État</th>
                                        <th>Date d'ajout</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for objet in pagination %}
                                    <tr>
                                        <td>{{ objet.idObjet }}</td>
                                        <td>
                                            {% if objet.image %}
                                                <img src="{{ asset('uploads/images/' ~ objet.image) }}" alt="{{ objet.nom }}" style="width: 50px; height: 50px; object-fit: cover;">
                                            {% else %}
                                                <span class="text-muted">Pas d'image</span>
                                            {% endif %}
                                        </td>
                                        <td>{{ objet.nom }}</td>
                                        <td>{{ objet.categorie }}</td>
                                        <td>{{ objet.etat }}</td>
                                        <td>{{ objet.dateAjout|date('d/m/Y H:i') }}</td>
                                        <td>
                                            <a href="{{ path('app_back_office_objet_show', {'id': objet.idObjet}) }}" class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ path('app_back_office_objet_edit', {'id': objet.idObjet}) }}" class="btn btn-primary btn-sm">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form method="post" action="{{ path('app_back_office_objet_delete', {'id': objet.idObjet}) }}" style="display: inline-block" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet objet ?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ objet.idObjet) }}">
                                                <button class="btn btn-danger btn-sm">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="mt-4" style="text-align: center;">
    {{ knp_pagination_render(pagination) }}
</div>

<style>
    /* Modern Search Bar Styling */
    .search-form {
        position: relative;
        width: 300px;
    }

    .search-wrapper {
        display: flex;
        align-items: center;
        background: #fff;
        border: 1px solid #e7e9ed;
        border-radius: 0.5rem;
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .search-wrapper:focus-within {
        border-color: #15a362;
        box-shadow: 0 0 0 0.2rem rgba(21, 163, 98, 0.25);
    }

    .search-input {
        flex: 1;
        border: none;
        padding: 0.5rem 1rem;
        font-size: 0.875rem;
        background: transparent;
        color: #5d6778;
        outline: none;
    }

    .search-input::placeholder {
        color: #9fa7b5;
    }

    .search-button {
        background: none;
        border: none;
        color: #15a362;
        padding: 0.5rem 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .search-button:hover {
        color: #0e724a;
    }

    .clear-search {
        position: absolute;
        right: 40px;
        top: 50%;
        transform: translateY(-50%);
        color: #dc3545;
        text-decoration: none;
        font-size: 0.75rem;
        padding: 0.25rem;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
    }

    .clear-search:hover {
        color: #bd2130;
        transform: translateY(-50%) scale(1.1);
    }
</style>
{% endblock %}