{% extends 'base.html.twig' %}

{% block title %}Détails de l'Objet{% endblock %}

{% block body %}
<section class="service_section layout_padding bg-light">
    <div class="container mt-5">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0">Détails de l'Objet</h2>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <tbody>
                            <tr>
                                <th class="w-25">ID</th>
                                <td>{{ objet.id_object }}</td>
                            </tr>
                            <tr>
                                <th>Nom</th>
                                <td>{{ objet.nom }}</td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td>{{ objet.description }}</td>
                            </tr>
                            <tr>
                                <th>État</th>
                                <td><span class="badge {% if objet.etat == 'actif' %}bg-success{% else %}bg-secondary{% endif %}">{{ objet.etat }}</span></td>
                            </tr>
                            <tr>
                                <th>Date d'ajout</th>
                                <td>{{ objet.dateAjout ? objet.dateAjout|date('d/m/Y H:i') : '' }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('app_objet_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Retour à la liste
                    </a>
                    <div class="btn-group">
                        <a href="{{ path('app_objet_edit', {'id_object': objet.id_object}) }}" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Modifier
                        </a>
                        {{ include('objet/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
    <style>
        .card {
            border: none;
            border-radius: 15px;
        }
        .card-header {
            border-radius: 15px 15px 0 0;
            padding: 1.5rem;
        }
        .table th {
            background-color: #f8f9fa;
        }
        .badge {
            padding: 0.5em 1em;
        }
        .btn-group .btn {
            margin: 0 2px;
        }
    </style>
{% endblock %}
