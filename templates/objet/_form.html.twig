{{ form_start(form, {'attr': {'class': 'needs-validation modern-form', 'novalidate': 'novalidate'}}) }}
    <div class="row g-4">
        <div class="col-md-6">
            <div class="form-group">
                {{ form_label(form.nom, 'Nom de l\'objet', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.nom, {'attr': {
                    'class': 'form-control form-control-lg',
                    'placeholder': 'Entrez le nom de l\'objet'
                }}) }}
                {{ form_errors(form.nom) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                {{ form_label(form.etat, 'État', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.etat, {'attr': {
                    'class': 'form-select form-select-lg'
                }}) }}
                {{ form_errors(form.etat) }}
            </div>
        </div>
        <div class="col-12">
            <div class="form-group">
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.description, {'attr': {
                    'class': 'form-control',
                    'rows': '4',
                    'placeholder': 'Décrivez l\'objet en détail'
                }}) }}
                {{ form_errors(form.description) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                {{ form_label(form.date_ajout, 'Date d\'ajout', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.date_ajout, {'attr': {
                    'class': 'form-control form-control-lg'
                }}) }}
                {{ form_errors(form.date_ajout) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                {{ form_label(form.id_utilisateur, 'Utilisateur', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.id_utilisateur, {'attr': {
                    'class': 'form-select form-select-lg'
                }}) }}
                {{ form_errors(form.id_utilisateur) }}
            </div>
        </div>
    </div>

    <div class="text-end mt-4">
        <button type="submit" class="btn btn-primary btn-lg">
            <i class="fas fa-save me-2"></i> {{ button_label|default('Enregistrer') }}
        </button>
    </div>
{{ form_end(form) }}

