{% extends 'base.html.twig' %}

{% block title %}User Profile{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2>User Profile</h2>

    <div class="card">
        <div class="card-body">
            <p><strong>Name:</strong> {{ user.name }}</p>
            <p><strong>Name:</strong> {{ user.lastName }}</p>
            <p><strong>Email:</strong> {{ user.email }}</p>
<p><strong>Roles:</strong> {{ user.roles|join(', ') }}</p>
            <p><strong>Status:</strong> {{ user.isEnabled ? 'Active' : 'Disabled' }}</p>

            <a href="{{ path('edit_user', {id: user.id}) }}" class="btn btn-warning">Edit</a>
            <a href="{{ path('delete_user', {id: user.id}) }}" class="btn btn-danger" onclick="return confirm('Are you sure?');">Delete</a>
        </div>
    </div>
</div>
{% endblock %}
