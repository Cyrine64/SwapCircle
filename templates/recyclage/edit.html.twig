{% extends 'rec-base.html.twig' %}

{% block title %}Modifier le Recyclage{% endblock %}

{% block body %}
<div class="p-8 bg-white shadow-md rounded-lg">
    <h1 class="text-3xl font-bold mb-4">Modifier le Recyclage</h1>

    {% for message in app.flashes('error') %}
        <div class="bg-red-100 text-red-700 p-2 rounded mb-4">{{ message }}</div>
    {% endfor %}

    {% for message in app.flashes('success') %}
        <div class="bg-green-100 text-green-700 p-2 rounded mb-4">{{ message }}</div>
    {% endfor %}

    {{ form_start(form) }}
        <div class="space-y-4">
            <div>
                {{ form_row(form.objet, {'attr': {'class': 'w-full border border-gray-300 p-2 rounded'}}) }}
            </div>

            <div>
                {{ form_row(form.type_recyclage, {'attr': {'class': 'w-full border border-gray-300 p-2 rounded'}}) }}
            </div>

            <div>
                {{ form_row(form.commentaire, {'attr': {'class': 'w-full border border-gray-300 p-2 rounded'}}) }}
            </div>
            
            <div>
                {{ form_row(form.date_recyclage, {'attr': {'class': 'w-full border border-gray-300 p-2 rounded'}}) }}
            </div>
            
            <div>
                {{ form_row(form.user, {'attr': {'class': 'w-full border border-gray-300 p-2 rounded'}}) }}
            </div>
        </div>

        <div class="mt-4 space-x-2">
            <button type="submit" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded">
                Enregistrer
            </button>
            <a href="{{ path('recyclage_index') }}" class="bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded">
                Annuler
            </a>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
