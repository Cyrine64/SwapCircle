            border-radius: 8px;
            font-size: 1rem;
            color: rgba(0, 0, 0, 0.8);
            box-sizing: border-box;
        }

        .form-table input:focus,
        .form-table select:focus,
        .form-table textarea:focus {
            outline: none;
            border: 2px solidrgb(57, 163, 45);
            box-shadow: 0 4px 10px rgba(255, 204, 0, 0.3);
        }
        

        .btn {
            background:rgb(117, 207, 121);
            color: #000;
            padding: 12px 25px;
            font-size: 1.1rem;
            font-weight: 600;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            display: block;
            margin: 20px auto 0;
            transition: all 0.3s ease;
            box-shadow: 0 4px 10px rgba(255, 204, 0, 0.3);
        }

        .btn:hover {
            background:rgb(45, 181, 54);
            box-shadow: 0 6px 15px rgba(110, 180, 95, 0.4);
            transform: translateY(-2px);
        }
