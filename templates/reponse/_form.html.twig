{% block stylesheets %}
    <style>
        .form-container {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(10px);
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.3);
            max-width: 700px;
            margin: auto;
            color: #fff;
        }
        .recf{
            color: rgb(0, 0, 0);
        }

        .form-title {
            text-align: center;
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 20px;
            color:rgb(3, 90, 21);
        }

        .form-table {
            width: 100%;
            margin-bottom: 20px;
        }

        .form-table td {
            padding: 8px;
        }

        .form-table td:nth-child(1) {
            font-weight: 600;
            color: #53ec2e;
            width: 30%;
        }

        .form-table td:nth-child(2) {
            width: 60%;
        }

        .form-table td:nth-child(3) {
