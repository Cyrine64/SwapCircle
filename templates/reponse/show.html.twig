{% extends 'back-base.html.twig' %}

{% block title %}Reponse{% endblock %}
{% block stylesheets %}
    <style>
        body {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            font-family: 'Poppins', sans-serif;
            color: #ffffff;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
            text-align: center;
        }
        
        h1 {
            font-size: 2.5rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 30px;
        }
        
        .table1 {
            width: 100%;
            max-width: 900px;
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(15px);
            border-radius: 12px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
            overflow: hidden;
            margin-bottom: 30px;
        }
        
        .table1 th, .table1 td {
            padding: 20px;
            text-align: left;
            font-size: 1.2rem;
        }
        
        .table1 th {
            background: rgba(255, 255, 255, 0.3);
            color: #35ec2e;
            font-weight: 700;
            text-transform: uppercase;
        }
        
        .table1 td {
            color: #000000;
            background: rgba(255, 255, 255, 0.1);
        }
        
        .table1 tr:nth-child(even) {
            background: rgba(255, 255, 255, 0.15);
        }
        
        .btn-custom {
            display: inline-block;
            padding: 12px 25px;
            margin: 15px 10px;
            text-decoration: none;
            font-size: 1.1rem;
            font-weight: 600;
            color: #ffffff;
            background: #ffcc00;
            border-radius: 8px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 10px rgba(255, 204, 0, 0.3);
        }
        
        .btn-custom:hover {
            background: #ff9900;
            box-shadow: 0 6px 15px rgba(255, 153, 0, 0.4);
            transform: translateY(-3px);
        }
    </style>
{% endblock %}
{% block body %}
    <h1>Réponse Détail</h1>

    <table class="table1">
        <tbody>
            <tr>
                <th>Titre Réclamation</th>
                <td>{{ reponse.reclamation.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ reponse.contenu }}</td>
            </tr>
            <tr>
                <th>Date Réponse</th>
                <td>{{ reponse.dateReponse ? reponse.dateReponse|date('Y-m-d H:i:s') : 'Non défini' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reponse_index') }}" class="btn-custom">Retour à la liste</a>
    <a href="{{ path('app_reponse_edit', {'id_reponse': reponse.getIdReponse()}) }}" class="btn-custom">Modifier</a>

    {{ include('reponse/_delete_form.html.twig') }}
{% endblock %}