{% extends 'back-base.html.twig' %}

{% block title %}Ajouter un Article{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h2 class="text-center mb-4">üìù Ajouter un nouvel article</h2>
        
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm p-4">
                    {{ form_start(form) }}
                        
                        <!-- Champ Titre -->
                        <div class="mb-3">
                            {{ form_label(form.titre) }}
                            {{ form_widget(form.titre, {
                                'attr': {
                                    'class': 'form-control',
                                    'required': 'required',
                                    'maxlength': '255',
                                    'placeholder': 'Entrez le titre de l\'article'
                                }
                            }) }}
                            {{ form_errors(form.titre) }}
                        </div>

                        <!-- Champ Contenu -->
                        <div class="mb-3">
                            {{ form_label(form.contenu) }}
                            {{ form_widget(form.contenu, {
                                'attr': {
                                    'class': 'form-control',
                                    'required': 'required',
                                    'placeholder': 'Entrez le contenu de l\'article',
                                    'minlength': '10'
                                }
                            }) }}
                            {{ form_errors(form.contenu) }}
                        </div>

                       <!-- Champ Date de Cr√©ation -->
                        <div class="mb-3">
                            {{ form_label(form.date_publication, 'Date de cr√©ation', {'label_attr': {'class': 'fw-bold'}}) }}
                            {{ form_widget(form.date_publication, {
                                'attr': {
                                    'class': 'form-control',
                                    'required': 'required'
                                }
                            }) }}
                            {{ form_errors(form.date_publication) }}
                        </div>

                        <!-- Champ Image -->
                        <div class="mb-3">
                            {{ form_label(form.imageFile) }}
                            {{ form_widget(form.imageFile, {
                                'attr': {
                                    'class': 'form-control',
                                    'accept': 'image/*',
                                    'required': 'required'
                                }
                            }) }}
                            {{ form_errors(form.imageFile) }}
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('front_office_blog') }}" class="btn btn-secondary">
                                ‚ùå Annuler
                            </a>
                            <button type="submit" class="btn btn-primary">Enregistrer</button>
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
