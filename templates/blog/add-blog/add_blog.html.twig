{% extends 'base.html.twig' %}

{% block title %}Ajouter un Article{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg border-0 rounded-lg">
                    
                    <!-- En-t√™te stylis√© -->
                    <div class="card-header bg-primary text-white text-center py-3">
                        <h3 class="mb-0"><i class="fa fa-pencil-alt"></i> Ajouter un nouvel article</h3>
                    </div>

                    <!-- Contenu du formulaire -->
                    <div class="card-body p-4">
                        {{ form_start(form) }}

                        <div class="form-group mb-3">
                            {{ form_label(form.titre, 'Titre de l\'article', {'label_attr': {'class': 'fw-bold'}}) }}
                            {{ form_widget(form.titre, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le titre...'}}) }}
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.contenu, 'Contenu', {'label_attr': {'class': 'fw-bold'}}) }}
                            {{ form_widget(form.contenu, {'attr': {'class': 'form-control', 'rows': 6, 'placeholder': 'R√©digez votre contenu ici...'}}) }}
                        </div>
                    </div>

                    <!-- Pied de page avec les boutons -->
                    <div class="card-footer bg-light d-flex justify-content-between py-3">
                        <a href="{{ path('front_office_blog') }}" class="btn btn-outline-danger">
                            ‚ùå Cancel
                        </a>
                        <button type="submit" class="btn btn-success">
                            üíæ Save
                        </button>
                    </div>

                    
                </div>
            </div>
        </div>
    </div>
{% endblock %}