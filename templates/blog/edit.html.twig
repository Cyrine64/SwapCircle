{% extends 'back-base.html.twig' %}

{% block title %}Modifier l'Article{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h2 class="text-center mb-4">✏️ Modifier l'Article</h2>
        
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm p-4">
                    {{ form_start(form) }}
                        
                        <!-- Afficher l'image actuelle si elle existe -->
                        {% if blog.image %}
                            <div class="mb-3">
                                <label class="form-label">Image actuelle :</label>
                                <img src="{{ asset('uploads/images/' ~ blog.image) }}" class="img-fluid rounded" alt="Image actuelle" style="max-width: 200px;">
                            </div>
                        {% endif %}

                        <!-- Champ Titre -->
                        <div class="mb-3">
                            {{ form_label(form.titre) }}
                            {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.titre) }}
                        </div>

                        <!-- Champ Contenu -->
                        <div class="mb-3">
                            {{ form_label(form.contenu) }}
                            {{ form_widget(form.contenu, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.contenu) }}
                        </div>

                       <!-- Champ Date de Création -->
                        <div class="mb-3">
                            {{ form_label(form.date_publication, 'Date de création', {'label_attr': {'class': 'fw-bold'}}) }}
                            {{ form_widget(form.date_publication, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.date_publication) }}
                        </div>

                        <!-- Champ Image -->
                        <div class="mb-3">
                            {{ form_label(form.imageFile) }}
                            {{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.imageFile) }}
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('front_office_blog') }}" class="btn btn-secondary">
                                ❌ Annuler
                            </a>
                            <button type="submit" class="btn btn-primary">Enregistrer</button>
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}