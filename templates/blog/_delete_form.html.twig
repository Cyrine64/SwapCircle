<form method="post" action="{{ path('app_blog_delete', {'idArticle': blog.idArticle}) }}" 
      onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ blog.idArticle) }}">
    <button type="submit" class="btn btn-danger">
        <i class="fas fa-trash-alt"></i> Delete
    </button>
</form>