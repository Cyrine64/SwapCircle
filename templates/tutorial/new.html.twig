{% extends 'base.html.twig' %}

{% block title %}Ajouter un Tutoriel{% endblock %}

{% block body %}
    <div class="max-w-3xl mx-auto mt-10 p-6 bg-white shadow-lg rounded-lg">
        <h1 class="text-2xl font-bold text-center mb-6 text-blue-600">Ajouter un Tutoriel</h1>

        {# Affichage des messages flash #}
        {% for message in app.flashes('success') %}
            <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6 rounded">
                {{ message }}
            </div>
        {% endfor %}

        {# Début du formulaire #}
        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

            {# Champ Description #}
            <div class="space-y-2">
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500'}}) }}
                {{ form_errors(form.description) }}
            </div>

            {# Champ URL de la vidéo #}
            <div class="space-y-2">
                {{ form_label(form.vid_URL, 'URL de la vidéo', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.vid_URL, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500'}}) }}
                {{ form_errors(form.vid_URL) }}
            </div>

            {# Champ Date de création #}
            <div class="space-y-2">
                {{ form_label(form.date_creation, 'Date de création', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.date_creation, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500'}}) }}
                {{ form_errors(form.date_creation) }}
            </div>

            {# Champ Recyclage #}
            <div class="space-y-2">
                {{ form_label(form.recyclage, 'Recyclage', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.recyclage, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500'}}) }}
                {{ form_errors(form.recyclage) }}
            </div>

            {# Champ Utilisateur #}
            <div class="space-y-2">
                {{ form_label(form.utilisateur, 'Utilisateur', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.utilisateur, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500'}}) }}
                {{ form_errors(form.utilisateur) }}
            </div>

            {# Bouton de soumission #}
            <div class="flex justify-end space-x-4 mt-6">
                <a href="{{ path('tutorial_index') }}" class="bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded">
                    Retour à la liste
                </a>
              
            </div>

        {{ form_end(form) }}
    </div>
{% endblock %}