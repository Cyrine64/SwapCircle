{% extends 'base.html.twig' %}

{% block title %}Proposer un échange{% endblock %}

{% block body %}
<section class="service_section layout_padding bg-light">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card shadow-lg">
                    <div class="card-header bg-gradient text-white p-4">
                        <h2 class="mb-0">Proposer un échange</h2>
                    </div>
                    <div class="card-body p-4">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="target-object mb-4">
                                    <h4 class="text-primary mb-3">Objet souhaité</h4>
                                    <div class="card">
                                        <div class="card-body">
                                            <h5 class="card-title">{{ target_object.nom }}</h5>
                                            <p class="card-text">{{ target_object.description }}</p>
                                            <p class="text-muted">
                                                <small>Propriétaire: {{ target_object.idUtilisateur.nom }}</small>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <h4 class="text-primary mb-3">Choisissez votre objet à échanger</h4>
                                <div class="user-objects">
                                    <div class="card mb-4">
                                        <div class="card-body">
                                            <h5 class="text-success mb-3">
                                                <i class="fas fa-plus-circle me-2"></i>
                                                Nouvel objet à proposer
                                            </h5>
                                            <a href="{{ path('app_objet_new') }}" class="btn btn-success w-100">
                                                Créer un nouvel objet pour l'échange
                                            </a>
                                        </div>
                                    </div>

                                    {% for object in user_objects %}
                                        <div class="card mb-3 object-card">
                                            <div class="card-body">
                                                <h5 class="card-title">{{ object.nom }}</h5>
                                                <p class="card-text">{{ object.description }}</p>
                                                <form action="{{ path('app_exchange_create', {
                                                    'target_id': target_object.id_object,
                                                    'offered_id': object.id_object
                                                }) }}" method="POST" class="mt-3">
                                                    <button type="submit" class="btn btn-exchange w-100">
                                                        <i class="fas fa-exchange-alt me-2"></i>
                                                        Proposer cet objet
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    {% else %}
                                        <div class="alert alert-info">
                                            <i class="fas fa-info-circle me-2"></i>
                                            Vous n'avez pas d'objets disponibles pour l'échange.
                                            <div class="mt-3">
                                                <a href="{{ path('app_objet_new') }}" class="btn btn-success w-100">
                                                    <i class="fas fa-plus-circle me-2"></i>
                                                    Créer votre premier objet
                                                </a>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .object-card {
        transition: all 0.3s ease;
        cursor: pointer;
        border: 2px solid transparent;
    }
    
    .object-card:hover {
        border-color: #3498db;
        transform: translateY(-2px);
    }
    
    .btn-exchange {
        background: linear-gradient(45deg, #e67e22, #f1c40f);
        color: white;
        border: none;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
    }
    
    .btn-exchange:hover {
        background: linear-gradient(45deg, #d35400, #f39c12);
        transform: translateY(-1px);
        color: white;
    }
</style>
{% endblock %} 