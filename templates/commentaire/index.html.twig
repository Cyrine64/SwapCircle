{% extends 'base.html.twig' %}





{% block title %}Commentaire Index{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center fw-bold mb-4">Commentaire Index</h1>

        <div class="card shadow-sm p-4 rounded">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>IdCommentaire</th>
                            <th>Contenu</th>
                            <th>DateCommentaire</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for commentaire in commentaires %}
                        <tr>
                            <td>{{ commentaire.idCommentaire }}</td>
                            <td>{{ commentaire.contenu }}</td>
                            <td>{{ commentaire.dateCommentaire ? commentaire.dateCommentaire|date('Y-m-d') : '' }}</td>
                            <td>
                                <a href="{{ path('app_commentaire_show', {'idCommentaire': commentaire.idCommentaire}) }}" class="btn btn-info btn-sm">Show</a>
                                <a href="{{ path('app_commentaire_edit', {'idCommentaire': commentaire.idCommentaire}) }}" class="btn btn-warning btn-sm">Edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center">No records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="text-center mt-3">
            <a href="{{ path('app_commentaire_new') }}" class="btn btn-primary">Create New</a>
        </div>
    </div>
{% endblock %}